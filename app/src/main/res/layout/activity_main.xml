<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            tools:ignore="MissingConstraints" >
            <ImageView
                android:id="@+id/back_chapter_detials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="18dp"
                android:textAlignment="center"
                android:id="@+id/subject_name"
                android:layout_marginStart="90dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">




            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const1P1"
            android:layout_width="match_parent"
            android:layout_height="1282dp">

            <TextView
                android:id="@+id/categorytextP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="By Category"
                android:textColor="#191919"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.063"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="368dp"
                android:layout_height="377dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categorytextP1"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/categoriesImgP1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/announcep1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </ImageView>

                        <TextView
                            android:id="@+id/categoriesTextP1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/roboto_medium"

                            android:text="Announcement(4)"
                            android:textColor="#191919"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/categoriesImgP1"
                            app:layout_constraintTop_toTopOf="parent">

                        </TextView>

                        <ImageView
                            android:id="@+id/arrowP1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:layout_marginEnd="38dp"
                            android:src="@drawable/arrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </ImageView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="30dp"
                            android:background="@color/underline"
                            app:layout_constraintTop_toBottomOf="@+id/categoriesTextP1"
                            tools:layout_editor_absoluteX="30dp">


                        </View>

                        <ImageView
                            android:id="@+id/categoriesImg2P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/assignmentp1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/categoriesImgP1">

                        </ImageView>

                        <TextView
                            android:id="@+id/categoriesText2P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="42dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Assignments"
                            android:textColor="#191919"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/categoriesImg2P1"
                            app:layout_constraintTop_toBottomOf="@id/categoriesTextP1">

                        </TextView>

                        <ImageView
                            android:id="@+id/arrow2P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="38dp"
                            android:src="@drawable/arrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/arrowP1">

                        </ImageView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="30dp"
                            android:background="@color/underline"
                            app:layout_constraintTop_toBottomOf="@+id/categoriesText2P1"
                            tools:layout_editor_absoluteX="30dp">


                        </View>

                        <ImageView
                            android:id="@+id/categoriesImg3P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/testp1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/categoriesImg2P1">

                        </ImageView>

                        <TextView
                            android:id="@+id/categoriesText3P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="41dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Test"
                            android:textColor="#191919"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/categoriesImg3P1"
                            app:layout_constraintTop_toBottomOf="@id/categoriesText2P1">

                        </TextView>

                        <ImageView
                            android:id="@+id/arrow3P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="38dp"
                            android:src="@drawable/arrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/arrow2P1">

                        </ImageView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="30dp"
                            android:background="@color/underline"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/categoriesText3P1">


                        </View>

                        <ImageView
                            android:id="@+id/categoriesImg4P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/feep1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/categoriesImg3P1">

                        </ImageView>

                        <TextView
                            android:id="@+id/categoriesText4P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="36dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Fee Payment(12)"
                            android:textColor="#191919"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/categoriesImg4P1"
                            app:layout_constraintTop_toBottomOf="@id/categoriesText3P1">

                        </TextView>

                        <ImageView
                            android:id="@+id/arrow4P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp"
                            android:layout_marginEnd="38dp"
                            android:src="@drawable/arrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/arrow3P1">

                        </ImageView>

                        <View
                            android:id="@+id/viewLine4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="30dp"
                            android:background="@color/underline"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/categoriesText4P1">


                        </View>

                        <ImageView
                            android:id="@+id/categoriesImg5P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/requestp1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/categoriesImg4P1">

                        </ImageView>

                        <TextView
                            android:id="@+id/categoriesText5P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Student registration "
                            android:textColor="#191919"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/categoriesImg5P1"
                            app:layout_constraintTop_toBottomOf="@id/viewLine4">

                        </TextView>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Pending - 12 | Rejected - 10"
                            app:layout_constraintStart_toStartOf="@+id/categoriesText5P1"
                            app:layout_constraintTop_toBottomOf="@+id/categoriesText5P1">

                        </TextView>

                        <ImageView
                            android:id="@+id/arrow5P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp"
                            android:layout_marginEnd="38dp"
                            android:src="@drawable/arrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/arrow4P1">

                        </ImageView>

                        <View
                            android:id="@+id/viewline5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="30dp"
                            android:background="@color/underline"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView">


                        </View>

                        <ImageView
                            android:id="@+id/categoriesImg6P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/othernotip1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/categoriesImg5P1">

                        </ImageView>

                        <TextView
                            android:id="@+id/categoriesText6P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="36dp"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Digital Library(12)"
                            android:textColor="#191919"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/categoriesImg6P1"
                            app:layout_constraintTop_toBottomOf="@+id/textView">

                        </TextView>

                        <ImageView
                            android:id="@+id/arrow6P1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="38dp"
                            android:src="@drawable/arrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/arrow5P1">

                        </ImageView>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto_bold"
                android:text="All Notifications"
                android:textColor="#191919"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler1P1"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler2P1"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler1P1">

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

</ScrollView>